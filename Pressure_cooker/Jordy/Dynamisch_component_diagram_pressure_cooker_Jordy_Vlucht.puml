@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Container.puml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Component.puml

title C4 Dynamic Container Diagram Booking.com api - TripTop
left to right direction

Person(Reiziger, "Reiziger", "Een reiziger die het systeem gebruikt om hotels te zoeken")
Container(WebApp, "WebApplication", "React/JavaScript", "Frontend interface for TripTop")

Container_Boundary(ContainerBoundary, "Container Boundary") {
    Component(InlogActionHandler, "InlogActionHandler", "Java/SpringBoot", "Handles application logic and API requests")
    Component(VluchtActionHandler, "VluchtActionHandler", "Java/SpringBoot", "Handles application logic and API requests")
    Component(VluchtController, "VluchtController", "Java/SpringBoot", "Handles application logic and API requests")
    Component(VluchtService, "VluchtService", "Java/SpringBoot", "Handles application logic and API requests")
}
System_Ext(Airscraper, "Airscraper", "Haalt alle vluchtgegevens op voor het boeken van een vlucht")


Rel(Reiziger, WebApp, "1: Selecteerd trip optie", $techn="HTTP", $tags="", $link="")
Rel(WebApp, VluchtController, "2: Verstuurt trip details", $techn="HTTP", $tags="", $link="")
Rel(VluchtController, VluchtActionHandler, "3: Verstuurt trip details", $techn="HTTP", $tags="", $link="")
Rel(VluchtActionHandler, InlogActionHandler, 3: Verstuurt trip details", $techn="HTTP", $tags="", $link="")
Rel(InlogActionHandler, VluchtActionHandler, "5: Verstuurt trip details", $techn="HTTP", $tags="", $link="")
Rel(VluchtActionHandler, VluchtService, "6: Verstuurt trip details", $techn="HTTP", $tags="", $link="")
Rel(VluchtService, Airscraper, "7: Verstuurt trip details", $techn="HTTP", $tags="", $link="")
Rel(Airscraper, VluchtService, "8: Verstuurt trip details", $techn="HTTP", $tags="", $link="")
Rel(VluchtService, VluchtActionHandler, "9: Verstuurt trip details", $techn="HTTP", $tags="", $link="")
Rel(VluchtActionHandler, VluchtController, "10: Verstuurt trip details", $techn="HTTP", $tags="", $link="")
Rel(VluchtController, WebApp, "11: Verstuurt trip details", $techn="HTTP", $tags="", $link="")
Rel(WebApp, Reiziger, "12: Verstuurt trip details", $techn="HTTP", $tags="", $link="")

SHOW_LEGEND(true)
@enduml