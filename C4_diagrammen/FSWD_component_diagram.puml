@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Container.puml


Person(Bezoeker, "Bezoeker", "Een bezoeker die het systeem gebruikt om zijn uitgaven te beheren")
Container(Frontend, "Frontend", "Een frotend die de inputs van de gebruiker verwerkt en door stuurt")

Container_Boundary(ContainerBoundary, "Backend") {
    Component "LoginController" as LoginController
    Component "LoginService" as LoginService
    Component "LoginRepository" as LoginRepository

    Component "ExpenseEntryController" as ExpenseEntryController
    Component "ExpenseEntryService" as ExpenseEntryService
    Component "ExpenseEntryRepository" as ExpenseEntryRepository

    Component "ExpenseOverviewController" as ExpenseOverviewController
    Component "ExpenseOverviewService" as ExpenseOverviewService
    Component "ExpenseOverviewRepository" as ExpenseOverviewRepository
}

Database "Externe Database" as ExterneDatabase

Bezoeker --> Frontend

Frontend --> LoginController
Frontend --> ExpenseEntryController
Frontend --> ExpenseOverviewController

LoginController --> LoginService
LoginService --> LoginRepository
LoginRepository --> ExterneDatabase

ExpenseEntryController --> ExpenseEntryService
ExpenseEntryService --> ExpenseEntryRepository
ExpenseEntryRepository --> ExterneDatabase

ExpenseOverviewController --> ExpenseOverviewService
ExpenseOverviewService --> ExpenseOverviewRepository
ExpenseOverviewRepository --> ExterneDatabase

@enduml